<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>관리자 대시보드 - 중고 경매</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        .admin-header {
            background: #111827;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid #1f2937;
        }

        .admin-title {
            color: #6366f1;
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 2em;
            margin-bottom: 10px;
        }

        .back-button {
            background: #3b82f6;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            transition: opacity 0.3s ease;
        }

        .back-button:hover {
            opacity: 0.8;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #111827;
            border: 1px solid #1f2937;
            border-radius: 12px;
            padding: 25px;
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-icon.users { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
        .stat-icon.items { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }
        .stat-icon.bids { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
        .stat-icon.sales { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }

        .stat-info h3 {
            color: #94a3b8;
            font-size: 0.9em;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .stat-info .stat-value {
            color: #f1f5f9;
            font-size: 2em;
            font-weight: bold;
        }

        .admin-section {
            background: #111827;
            border: 1px solid #1f2937;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .section-title {
            color: #f1f5f9;
            font-size: 1.5em;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .table-container {
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #0a0e1a;
        }

        th {
            padding: 15px;
            text-align: left;
            color: #6366f1;
            font-weight: 600;
            border-bottom: 2px solid #1f2937;
            white-space: nowrap;
        }

        td {
            padding: 15px;
            color: #e2e8f0;
            border-bottom: 1px solid #1f2937;
        }

        tbody tr:hover {
            background: #0a0e1a;
        }

        .badge {
            display: inline-block;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
        }

        .badge.admin {
            background: #7c3aed;
            color: white;
        }

        .badge.user {
            background: #3b82f6;
            color: white;
        }

        .badge.active {
            background: #10b981;
            color: white;
        }

        .badge.sold {
            background: #ef4444;
            color: white;
        }

        .badge.expired {
            background: #64748b;
            color: white;
        }

        .action-button {
            background: #1f2937;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.9em;
            margin-right: 5px;
            margin-bottom: 5px;
            transition: opacity 0.3s ease;
            white-space: nowrap;
        }

        .action-button:hover {
            opacity: 0.8;
        }

        .action-button.danger {
            background: #ef4444;
        }

        .action-button.success {
            background: #10b981;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #64748b;
        }

        @media (max-width: 1024px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .admin-container {
                padding: 15px;
            }

            .admin-header {
                padding: 20px;
            }

            .admin-section {
                padding: 20px;
            }
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .admin-container {
                padding: 10px;
            }

            .admin-header {
                padding: 15px;
            }

            .admin-title {
                font-size: 1.5em;
            }

            .stat-card {
                padding: 15px;
            }

            .stat-icon {
                width: 50px;
                height: 50px;
            }

            .stat-info .stat-value {
                font-size: 1.5em;
            }

            .table-container {
                font-size: 0.85em;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }

            table {
                min-width: 600px;
            }

            th, td {
                padding: 8px;
            }

            .action-button {
                padding: 6px 10px;
                font-size: 0.8em;
            }
        }

        @media (max-width: 480px) {
            .admin-title {
                font-size: 1.3em;
                flex-direction: column;
                align-items: flex-start;
                gap: 10px;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
            }

            .stat-info {
                width: 100%;
            }

            .table-container {
                font-size: 0.75em;
            }

            table {
                min-width: 500px;
            }

            th, td {
                padding: 6px;
            }

            .section-title {
                font-size: 1.2em;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="admin-header">
            <h1 class="admin-title">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                    <path d="M2 17l10 5 10-5"></path>
                    <path d="M2 12l10 5 10-5"></path>
                </svg>
                관리자 대시보드
            </h1>
            <p style="color: #94a3b8; margin-bottom: 15px;">시스템 전체를 관리하고 모니터링합니다</p>
            <a href="/" class="back-button">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M19 12H5M12 19l-7-7 7-7"/>
                </svg>
                메인으로 돌아가기
            </a>
        </div>

        <!-- 통계 대시보드 -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon users">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>총 사용자</h3>
                    <div class="stat-value" id="totalUsers">-</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon items">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>총 상품 (활성)</h3>
                    <div class="stat-value" id="totalItems">-</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon bids">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>총 입찰</h3>
                    <div class="stat-value" id="totalBids">-</div>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-icon sales">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                </div>
                <div class="stat-info">
                    <h3>총 매출</h3>
                    <div class="stat-value" id="totalSales">-</div>
                </div>
            </div>
        </div>

        <!-- 사용자 관리 -->
        <div class="admin-section">
            <h2 class="section-title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
                사용자 관리
            </h2>
            <div class="table-container">
                <table id="usersTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>사용자명</th>
                            <th>이메일</th>
                            <th>잔액</th>
                            <th>역할</th>
                            <th>가입일</th>
                            <th>작업</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody">
                        <tr>
                            <td colspan="7" class="empty-state">로딩 중...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 상품 관리 -->
        <div class="admin-section">
            <h2 class="section-title">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                </svg>
                상품 관리
            </h2>
            <div class="table-container">
                <table id="itemsTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>제목</th>
                            <th>판매자</th>
                            <th>현재가</th>
                            <th>상태</th>
                            <th>종료일</th>
                            <th>작업</th>
                        </tr>
                    </thead>
                    <tbody id="itemsTableBody">
                        <tr>
                            <td colspan="7" class="empty-state">로딩 중...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="notification" id="notification">
        <span id="notificationMessage"></span>
    </div>

    <script>
        // 통계 로드
        async function loadStats() {
            try {
                const response = await fetch('/api/admin/stats');
                const data = await response.json();

                if (data.success) {
                    document.getElementById('totalUsers').textContent = data.stats.totalUsers.toLocaleString();
                    document.getElementById('totalItems').textContent = `${data.stats.totalItems.toLocaleString()} (${data.stats.activeItems})`;
                    document.getElementById('totalBids').textContent = data.stats.totalBids.toLocaleString();
                    document.getElementById('totalSales').textContent = `₩${data.stats.totalSales.toLocaleString()}`;
                }
            } catch (error) {
                console.error('통계 로드 에러:', error);
            }
        }

        // 사용자 목록 로드
        async function loadUsers() {
            try {
                const response = await fetch('/api/admin/users');
                const data = await response.json();

                if (data.success) {
                    const tbody = document.getElementById('usersTableBody');

                    if (data.users.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="7" class="empty-state">사용자가 없습니다</td></tr>';
                        return;
                    }

                    tbody.innerHTML = data.users.map(user => `
                        <tr>
                            <td>${user.id}</td>
                            <td>${user.username}</td>
                            <td>${user.email}</td>
                            <td>₩${user.balance.toLocaleString()}</td>
                            <td><span class="badge ${user.role}">${user.role === 'admin' ? '관리자' : '사용자'}</span></td>
                            <td>${new Date(user.created_at).toLocaleDateString()}</td>
                            <td>
                                <button class="action-button"
                                        style="background: #f59e0b;"
                                        onclick="changeBalance(${user.id}, ${user.balance})">
                                    잔액 변경
                                </button>
                                <button class="action-button ${user.role === 'admin' ? '' : 'success'}"
                                        onclick="toggleRole(${user.id}, '${user.role}')">
                                    ${user.role === 'admin' ? '일반으로' : '관리자로'}
                                </button>
                                <button class="action-button danger" onclick="deleteUser(${user.id})">삭제</button>
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('사용자 로드 에러:', error);
            }
        }

        // 상품 목록 로드
        async function loadItems() {
            try {
                const response = await fetch('/api/admin/items');
                const data = await response.json();

                if (data.success) {
                    const tbody = document.getElementById('itemsTableBody');

                    if (data.items.length === 0) {
                        tbody.innerHTML = '<tr><td colspan="7" class="empty-state">상품이 없습니다</td></tr>';
                        return;
                    }

                    tbody.innerHTML = data.items.map(item => `
                        <tr>
                            <td>${item.id}</td>
                            <td>${item.title}</td>
                            <td>${item.seller_name}</td>
                            <td>₩${item.current_price.toLocaleString()}</td>
                            <td><span class="badge ${item.status}">${getStatusText(item.status)}</span></td>
                            <td>${new Date(item.end_time).toLocaleDateString()}</td>
                            <td>
                                <button class="action-button danger" onclick="deleteItem(${item.id})">삭제</button>
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('상품 로드 에러:', error);
            }
        }

        function getStatusText(status) {
            const statusMap = {
                'active': '진행중',
                'sold': '판매완료',
                'expired': '종료'
            };
            return statusMap[status] || status;
        }

        // 사용자 잔액 변경
        async function changeBalance(userId, currentBalance) {
            const newBalanceStr = prompt(`새로운 잔액을 입력하세요 (현재: ₩${currentBalance.toLocaleString()})`, currentBalance);

            if (newBalanceStr === null) {
                return; // 취소
            }

            const newBalance = parseFloat(newBalanceStr);

            if (isNaN(newBalance) || newBalance < 0) {
                showNotification('유효한 금액을 입력해주세요', 'error');
                return;
            }

            try {
                const response = await fetch(`/api/admin/users/${userId}/balance`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ balance: newBalance })
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('잔액이 변경되었습니다', 'success');
                    loadUsers();
                    loadStats();
                } else {
                    showNotification(data.message, 'error');
                }
            } catch (error) {
                console.error('잔액 변경 에러:', error);
                showNotification('잔액 변경 실패', 'error');
            }
        }

        // 사용자 역할 변경
        async function toggleRole(userId, currentRole) {
            const newRole = currentRole === 'admin' ? 'user' : 'admin';

            if (!confirm(`이 사용자를 ${newRole === 'admin' ? '관리자' : '일반 사용자'}로 변경하시겠습니까?`)) {
                return;
            }

            try {
                const response = await fetch(`/api/admin/users/${userId}/role`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ role: newRole })
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('역할이 변경되었습니다', 'success');
                    loadUsers();
                } else {
                    showNotification(data.message, 'error');
                }
            } catch (error) {
                console.error('역할 변경 에러:', error);
                showNotification('역할 변경 실패', 'error');
            }
        }

        // 사용자 삭제
        async function deleteUser(userId) {
            if (!confirm('이 사용자를 삭제하시겠습니까?')) {
                return;
            }

            try {
                const response = await fetch(`/api/admin/users/${userId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('사용자가 삭제되었습니다', 'success');
                    loadUsers();
                    loadStats();
                } else {
                    showNotification(data.message, 'error');
                }
            } catch (error) {
                console.error('사용자 삭제 에러:', error);
                showNotification('사용자 삭제 실패', 'error');
            }
        }

        // 상품 삭제
        async function deleteItem(itemId) {
            if (!confirm('이 상품을 삭제하시겠습니까?')) {
                return;
            }

            try {
                const response = await fetch(`/api/admin/items/${itemId}`, {
                    method: 'DELETE'
                });

                const data = await response.json();

                if (data.success) {
                    showNotification('상품이 삭제되었습니다', 'success');
                    loadItems();
                    loadStats();
                } else {
                    showNotification(data.message, 'error');
                }
            } catch (error) {
                console.error('상품 삭제 에러:', error);
                showNotification('상품 삭제 실패', 'error');
            }
        }

        // 알림 표시
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const notificationMessage = document.getElementById('notificationMessage');

            notificationMessage.textContent = message;
            notification.className = `notification ${type} active`;

            setTimeout(() => {
                notification.classList.remove('active');
            }, 3000);
        }

        // 초기 로드
        loadStats();
        loadUsers();
        loadItems();

        // 주기적 업데이트 (30초마다)
        setInterval(() => {
            loadStats();
            loadUsers();
            loadItems();
        }, 30000);
    </script>
</body>
</html>
